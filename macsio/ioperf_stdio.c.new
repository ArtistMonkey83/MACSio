#warning SENSE OF RETURN VALUES IS 0=OK !0=ERROR
static int openFile_stdio(const char *fn, ioinfo_t *info)
{
    struct stat statbuf;
    FILE* file;
    uint64_t offset;
    sym_t *stab;
    ioinfo_t newinfo;

    if (!info) return 1;
    if (!fn) return 1;

    errno = 0;
    if (stat(fn, &statbuf) != 0 || errno != 0)
    {
        if (errno) return errno;
        return 1;
    }

    errno = 0;
    if (!(file = fopen(fn, info->cmode)) || errno != 0)
    { 
        if (errno) return errno;
        return 1;
    }

    /* read offset of symbol table */
    errno = 0;
    if (fread(&offset, sizeof(offset), 1, file) != 1 || errno != 0)
    {
        fclose(file);
        if (errno) return errno;
        return 1;
    }

    /* compute size of symbol table */
    nsyms = (statbuf.st_size - offset) / sizeof(sym_t);
    if (nsyms != (double) (statbuf.st_size - offset) / (double) sizeof(sym_t))
    {
        fclose(file);
        return 1;
    }

    /* allocate symbol table */
    stab = (sym_t *) calloc(2 * nsyms, sizeof(sym_t));
    if (stab == 0)
    {
        fclose(file);
        return 1;
    }
    strcpy(stab[2 * nsyms - 1].name, "END_OF_TABLE");
    stab[2 * nsyms - 1].offset = 0x0;
    stab[2 * nsyms - 1].next = 0x0;

    /* seek to beginning of symbol table */
    errno = 0;
    if (fseek(file, offset, SEEK_SET) != 0 || errno != 0)
    {
        fclose(file);
        if (errno) return errno;
        return 1;
    }

    /* Read symbol table off the tail end of the file */
    errno = 0;
    if (fread(stab, sizeof(sym_t), nsyms, file) != nsyms || errno != 0)
    {
        fclose(file);
        if (errno) return errno;
        return 1;
    }

    /* clear newinfo and copy relevant stuff from info */
    memset(&newinfo, 0x0, sizeof(ioinfo_t));
    newinfo.flags = info->flags;
    newinfo.pmode = info->pmode;
    newinfo.cmode = info->cmode;
    newinfo.
    newinfo.fh = (void*) file;

    /* copy newinfo back on top of info */
    *info = newinfo;
    return 0;
}

static int closeFile_stdio(ioinfo_t *info)
{
    uint64_t offset;
    FILE* file;

    if (!info) return 1;
    file = (FILE*) finfo->fh;

    /* seek to end of whole file */
    errno = 0;
    if (fseek(file, 0, SEEK_END) != 0 || errno != 0)
        return errno;
    if ((offset = ftell(file)) == (unit64_t)-1 || errno != 0)
        return errno;

    /* Write whole symbol table out */
    if (fwrite(finfo->symtab, sizeof(sym_t), info->symcnt, file) < finfo->symcnt)
    {
        if (errno) return errno;
        return 1;
    }

    /* Write offset of symbol table */
    if (fwrite(&offset, sizeof(offset), 1, file) < 1)
    {
        if (errno) return errno;
        return 1;
    }

    /* Ok, now really close the file */
    errno = 0;
    fclose((FILE*)info->fh);
    if (errno) return errno;
    memset(info, 0x0, sizeof(ioinfo_t));
    return 0;
}

