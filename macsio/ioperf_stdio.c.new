static iointerface_t *CreateInterfaceReal(int argi, int argc, char *argv[], const options_t *opts)
{
    iointerface_t *retval;
    stdio_data_t *mydata;

    if (strcmp(opts->iface_name, "stdio") != 0) return 0;

    /* populate this interface's specific data */
    mydata = (stdio_data_t*) calloc(sizeof(stdio_data_t),1);
    mydata->initial_options = *opts;

    /* populate the interface instance structure */
    retval = (iointerface_t*) calloc(sizeof(iointerface_t),1);
    retval->iface_data = mydata;
    retval->Open = Open_stdio;
    retval->Write = Write_stdio;
    retval->Read = Read_stdio;
    retval->Close = Close_stdio;

    return retval;
}

